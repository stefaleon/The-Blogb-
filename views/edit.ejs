<% include ./partials/header %>

		<div class="ui main text container segment" id="content">

			<div>Edit "<%= post.title %>" <i class="write icon emother"></i></div>
			<hr />
			<form class="ui form" action="/posts" method="POST">
				<div class="field">
					<label>Title<label>
					<input type="text" name="title" value="<%= post.title %>" />
				</div>
				<div class="field">
					<label>Image<label>
					<input type="text" name="image" value="<%= post.image %>" />
				</div>
				<div class="field">
					<label>Content<label>
					<textarea name="content"><%= post.content %></textarea>	
				</div>			
				<button class="ui basic button"><i class="checkmark box icon emother"></i>Submit</button>	
			</form>
			
		</div> <!-- container --> 

<% include ./partials/footer %>